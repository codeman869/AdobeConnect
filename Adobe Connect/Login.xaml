        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="Adobe Connect Login" Height="378.571" Width="278.571" ResizeMode="NoResize">
    
