<Window x:Class="Adobe_Connect.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adobe_Connect"
        mc:Ignorable="d"
        Title="Login" Height="378.571" Width="278.571" ResizeMode="NoResize">
    
    <Grid HorizontalAlignment="Left" Width="259">
        <TextBox x:Name="Username" Margin="10,65,15,0" TextWrapping="Wrap" Height="26" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Password" Margin="10,154,15,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="23"/>
        <Label Content="Username" Margin="10,23,15,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <Label Content="Password" Margin="10,113,15,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <Button x:Name="LogIn" Content="Login" Margin="10,219,15,0" Click="LogIn_Click" Height="20" VerticalAlignment="Top"/>
        <Label x:Name="LoginStatus" Content="" Margin="10,279,15,0" VerticalAlignment="Top" RenderTransformOrigin="-0.643,-0.768" Height="40" HorizontalContentAlignment="Center" FontSize="22"/>

    </Grid>
</Window>
